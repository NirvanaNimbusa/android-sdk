<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/merchant_account_settings">

        <ListPreference
            app:defaultValue="sandbox"
            app:entries="@array/environment_entries"
            app:entryValues="@array/environment_values"
            app:key="environment"
            app:title="@string/environment_preference"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="us"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:key="country"
            app:title="@string/country_preference"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>
